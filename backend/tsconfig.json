{
  "compilerOptions": {
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["./types/*"]
    }

  },
  "include": [
    "src/**/*",
    "src/interfaces/express.d.ts",
    "types.d.ts",
  ]
}